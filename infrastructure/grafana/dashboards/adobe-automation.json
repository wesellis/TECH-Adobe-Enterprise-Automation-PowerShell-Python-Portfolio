        "options": {
          "legend": {
            "calcs": [],
            "displayMode": "list",
            "placement": "bottom"
          },
          "tooltip": {
            "mode": "single"
          }
        },
        "pluginVersion": "9.5.0",
        "targets": [
          {
            "expr": "rate(adobe_api_calls_total[5m])",
            "legendFormat": "API Calls",
            "refId": "A"
          },
          {
            "expr": "rate(adobe_api_errors_total[5m])",
            "legendFormat": "API Errors",
            "refId": "B"
          }
