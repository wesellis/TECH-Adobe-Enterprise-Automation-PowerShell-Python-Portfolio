        "title": "License Distribution",
        "type": "piechart"
      },
      {
        "datasource": "Prometheus",
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "continuous-GrYlRd"},
            "custom": {
              "align": "auto",
              "displayMode": "auto"
            },
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 12},
        "id": 7,
        "options": {
          "showHeader": true,
          "sortBy": [
            {
              "desc": true,
              "displayName": "Users"
            }
          ]
        },
        "pluginVersion": "9.5.0",
        "targets": [
          {
            "expr": "topk(10, adobe_department_users)",
            "format": "table",
            "refId": "A"
          }
        ],
        "title": "Top Departments by Users",
        "type": "table"
      },
      {
        "datasource": "Prometheus",
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
