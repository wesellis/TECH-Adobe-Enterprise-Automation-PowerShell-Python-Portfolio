        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "justifyMode": "center",
          "orientation": "horizontal",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          },
          "text": {},
          "textMode": "auto"
        },
        "pluginVersion": "9.5.0",
        "targets": [
          {
            "expr": "up{job=\"adobe-automation\"}",
            "legendFormat": "{{ instance }}",
            "refId": "A"
          }
        ],
        "title": "System Health",
        "type": "stat"
      }
